{
  "name": "radiant-bloom-backend",
  "version": "1.0.0",
  "description": "Backend API for Radiant Bloom Beauty Store",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node start-server.js",
    "dev-simple": "nodemon server.js",
    "test": "jest",
    "seed": "node scripts/seedDatabase.js",
    "setup": "node setup.js",
    "setup-production": "node setup-production.js",
    "make-admin": "node scripts/makeAdmin.js",
    "create-admin": "node scripts/createAdmin.js",
    "seed-categories": "node scripts/seedCategories.js",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop radiant-bloom-api",
    "pm2:restart": "pm2 restart radiant-bloom-api",
    "pm2:logs": "pm2 logs radiant-bloom-api",
    "pm2:status": "pm2 status",
    "deploy": "npm run setup-production && npm ci --only=production && npm run pm2:start",
    "docker:build": "docker build -t radiant-bloom-api .",
    "docker:run": "docker run -p 5000:5000 --env-file .env radiant-bloom-api",
    "docker:compose": "docker-compose up -d --build"
  },
  "keywords": ["beauty", "ecommerce", "api", "mongodb", "cloudinary"],
  "author": "Radiant Bloom Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "cloudinary": "^1.41.0",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "express-mongo-sanitize": "^2.2.0",
    "hpp": "^0.2.3",
    "xss-clean": "^0.1.4",
    "cookie-parser": "^1.4.6",
    "express-async-errors": "^3.1.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
